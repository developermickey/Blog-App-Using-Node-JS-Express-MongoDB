<%- include('partials/header') %>
    <!-- âœ… Profile content -->
    <div class="bg-zinc-900 text-white min-h-screen flex">
        <aside class="w-64 bg-zinc-800 flex flex-col p-6 space-y-6">
            <h2 class="text-2xl font-bold text-emerald-400 pt-12">Dashboard</h2>
            <p class="text-gray-400">Total Posts: <span class="text-emerald-400 font-semibold">
                    <%= postCount %>
                </span></p>

            <nav class="flex flex-col space-y-4">
                <a href="/profile" class="hover:text-emerald-400">Profile</a>
                <a href="/my-posts" class="hover:text-emerald-400">All Posts</a>
                <a href="/posts/new" class="hover:text-emerald-400">Create Post</a>
                <form action="/logout" method="GET">
                    <button type="submit"
                        class="mt-4 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md transition duration-200">
                        Logout
                    </button>
                </form>
            </nav>
        </aside>
        <main class="flex-grow p-10 pt-32">
            <h1 class="text-4xl font-bold mb-4 text-emerald-400">Welcome, <%= user.name %>!</h1>
            <p class="text-gray-300 mb-2">
                <span class="font-semibold">Email:</span>
                <%= user.email %>
            </p>
            <p class="text-gray-300 mb-6">
                <span class="font-semibold">Total Blog Posts:</span>
                <%= postCount %>
            </p>
        </main>
    </div>

    </body>

    </html>