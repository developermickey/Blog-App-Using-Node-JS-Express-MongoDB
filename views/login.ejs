<%- include('partials/header') %>

    <div id="page" class="w-full min-h-screen text-white flex items-center justify-center pt-32">
        <div class="w-full max-w-md bg-zinc-800 p-8 rounded-lg shadow-md">
            <h1 class="text-3xl font-bold mb-6 text-emerald-400 text-center">Login</h1>

            <form action="/login" method="POST" class="flex flex-col gap-4">
                <!-- âœ… CSRF hidden input -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <input class="rounded-md px-4 py-3 outline-none text-black" type="email" placeholder="Email"
                    name="email" required />

                <input class="rounded-md px-4 py-3 outline-none text-black" type="password" placeholder="Password"
                    name="password" required />

                <button type="submit"
                    class="rounded-md px-4 py-3 bg-emerald-500 text-white font-semibold hover:bg-emerald-600 transition">
                    Login
                </button>
            </form>
        </div>
    </div>
    </body>

    </html>