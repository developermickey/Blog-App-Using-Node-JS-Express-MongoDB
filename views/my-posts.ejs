<%- include('partials/header') %>

    <main class="max-w-7xl mx-auto pt-32 px-4">
        <h1 class="text-3xl mb-8 text-emerald-400 font-bold">My Blog Posts</h1>

        <% if (posts.length> 0) { %>
            <!-- âœ… Use responsive grid -->
            <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
                <% posts.forEach(post=> { %>
                    <div class="bg-zinc-800 p-6 rounded-lg shadow-lg flex flex-col">
                        <h2 class="text-2xl font-bold mb-2">
                            <%= post.title %>
                        </h2>

                        <% if (post.image) { %>
                            <img src="<%= post.image %>" alt="Post Image"
                                class="mb-4 rounded-lg w-full h-48 object-cover" />
                            <% } %>

                                <p class="text-gray-300 mb-4 flex-grow">
                                    <%= post.content.substring(0, 150) %>...
                                </p>

                                <p class="text-gray-500 text-sm">Created: <%= post.createdAt.toDateString() %>
                                </p>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <p>You have no posts yet.
                    <a href="/posts/new" class="text-emerald-400 underline">Create one!</a>
                </p>
                <% } %>
    </main>